      "tags": "[if(contains(parameters('tagsByResource'), 'Microsoft.Automation/automationAccounts/runbooks'), parameters('tagsByResource')['Microsoft.Automation/automationAccounts/runbooks'], json('{}'))]",
      "properties": {
        "runbookType": "PowerShell72",
        "logVerbose": true,
        "logProgress": true,
