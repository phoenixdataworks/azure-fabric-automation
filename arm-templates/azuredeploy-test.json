      ],
      "properties": {
        "schedule": {
          "name": "Create-FabricCapacityWebhooks-Setup"
        },
        "runbook": {
          "name": "Create-FabricCapacityWebhooks"
        },
        "parameters": {
          "ResourceGroupName": "[resourceGroup().name]",
          "AutomationAccountName": "[parameters('automationAccountName')]",
          "CapacityId": "[variables('fabricCapacityId')]",
          "WebhookExpiryInDays": "[string(parameters('webhookExpiryInDays'))]",
          "IsEnabled": "true",
          "ScheduleStartTime": "[parameters('scheduleStartTime')]"
        }
      }
    },
    {
      "type": "Microsoft.Automation/automationAccounts/schedules",
