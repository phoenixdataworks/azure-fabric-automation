      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts/schedules', parameters('automationAccountName'), 'Schedule-FabricCapacityPattern-Setup')]",
        "[resourceId('Microsoft.Automation/automationAccounts/runbooks', parameters('automationAccountName'), 'Schedule-FabricCapacityPattern')]"
      ],
      "properties": {
        "schedule": {
          "name": "Schedule-FabricCapacityPattern-Setup"
        },
        "runbook": {
          "name": "Schedule-FabricCapacityPattern"
        },
        "parameters": {
          "ResourceGroupName": "[resourceGroup().name]",
          "AutomationAccountName": "[parameters('automationAccountName')]",
