          "StartTime": "[parameters('startTime')]",
          "ScaleUpTime": "[parameters('scaleUpTime')]",
          "ScaleUpSku": "[parameters('scaleUpSku')]",
          "ScaleDownTime": "[parameters('scaleDownTime')]",
          "StopTime": "[parameters('stopTime')]",
          "TimeZone": "[parameters('timeZone')]",
          "WeekDaysOnly": "[string(parameters('weekDaysOnly'))]",
          "ScheduleDays": "[string(replace(string(parameters('scheduleDays')), '\"', ''''))]",
          "DefaultSku": "[parameters('defaultSku')]",
          "ScheduleStartTime": "[parameters('scheduleStartTime')]"
        }
      }
    },
    {
      "type": "Microsoft.Automation/automationAccounts/schedules",
      "apiVersion": "2022-08-08",
      "name": "[concat(parameters('automationAccountName'), '/Create-FabricCapacityWebhooks-Setup')]",
      "condition": "[parameters('createWebhooks')]",
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts/runbooks', parameters('automationAccountName'), 'Create-FabricCapacityWebhooks')]"
